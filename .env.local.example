# Application
NODE_ENV=development
PORT=4000

# Database (로컬 Docker PostgreSQL)
DATABASE_URL=postgresql://sundey:sundey123@localhost:5432/sundey_crm?schema=public

# JWT
JWT_SECRET=your-local-dev-secret-key-minimum-32-characters-required
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-local-dev-refresh-secret-key-minimum-32-characters
